<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:splitMotionEvents="true"
    tools:context=".autolanding.TestingActivity">

    <LinearLayout
        android:id="@+id/testingLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/testingLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/targetAndGimbalTestBtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="yuvmode" />

            <Button
                android:id="@+id/targetTestBtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/targetAndGimbalTestBtn"
                android:text="get pic" />

            <Button
                android:id="@+id/flightTestBtn"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_toRightOf="@+id/targetTestBtn"
                android:text="yuv detect" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/testingLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/targetAndFlightTestBtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="target&amp;flight" />

            <Button
                android:id="@+id/fullStartTestBtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/targetAndFlightTestBtn"
                android:text="a full start" />

            <Button
                android:id="@+id/exitTestBtn"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_toRightOf="@+id/fullStartTestBtn"
                android:text="exit!" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/testingLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/multiTest1Btn"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:text="!!" />

            <Button
                android:id="@+id/multiTest2Btn"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_below="@+id/multiTest1Btn"
                android:layout_marginTop="0dp"
                android:text="r" />

            <Button
                android:id="@+id/multiTest3Btn"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_below="@+id/multiTest2Btn"
                android:layout_marginTop="0dp"
                android:text="v" />

            <ImageView
                android:id="@+id/matshowV"
                android:layout_width="220dp"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/radio_group_test"
                android:layout_toRightOf="@id/multiTest1Btn"
                android:layout_gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/finishVisualLand_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="5pt"
                    android:checked="true"
                    android:text="VisualLand" />
            </RadioGroup>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/testingLayout3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SurfaceView
                android:id="@+id/drawingSurface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <TextureView
                android:id="@+id/videoPreviewerSurface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
            
        </FrameLayout>
        
    </RelativeLayout>

</RelativeLayout>